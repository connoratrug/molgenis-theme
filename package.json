{
  "name": "@molgenis/molgenis-theme",
  "version": "1.0.0",
  "description": "Base theme for Molgenis",
  "main": "mg-theme.js",
  "bin": {
    "mg-theme": "./mg-theme.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "css/**/*.css"
  ],
  "type": "module",
  "engines": {
    "node": ">=13.0.0"
  },
  "scripts": {
    "build": "node mg-theme.js build --optimize",
    "build-all": "node mg-theme.js build --all --optimize",
    "dev": "node mg-theme.js dev",
    "lint": "stylelint \"scss/**/*.scss\"",
    "proxy": "docker-compose --env-file .env --file ./docker/dc-proxy.yml up",
    "theme": "node mg-theme.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/molgenis/molgenis-theme.git"
  },
  "author": "Genetics Coordination Centre",
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/molgenis/molgenis-theme/issues"
  },
  "homepage": "https://github.com/molgenis/molgenis-theme#readme",
  "devDependencies": {
    "archy": "^1.0.0",
    "chalk": "^3.0.0",
    "chokidar": "^3.3.1",
    "clean-css": "^4.2.3",
    "connect": "^3.7.0",
    "del": "2.x.x",
    "fs-extra": "^8.1.0",
    "lodash": "^4.17.15",
    "node-sass": "^4.13.1",
    "node-sass-glob-importer": "^5.3.2",
    "semantic-release": "^17.1.2",
    "stylelint": "^13.7.1",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "3.x.x",
    "tildify": "^2.0.0",
    "tiny-lr": "^1.1.1",
    "yargs": "^15.3.1"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "body-parser": "^1.19.0",
    "bootstrap-sass": "^3.4.1",
    "bootstrap-scss": "4.5.2",
    "express": "^4.17.1",
    "ini": "^1.3.5",
    "node-notifier": "^8.0.0",
    "serve-static": "^1.14.1"
  }
}
